<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/quiz"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:text="Question 1 : who is this guy"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"

            />
        <ImageView
            android:id="@+id/imageGiga"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/giga"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

        <RadioGroup
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:id="@+id/radioGroup"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/imageGiga"
            >

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gigachad"
                android:text="gigachad"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/houssein"
                android:text="houssein"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/kabil"
                android:text="kabil"
                />

        </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/botona"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioGroup"
        android:text="Answer"
        android:layout_centerHorizontal="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/text2"
            android:text="Question 1 : who is this guy"
            android:layout_below="@+id/botona"
            android:layout_centerHorizontal="true"

            />

    </RelativeLayout>
</ScrollView>
